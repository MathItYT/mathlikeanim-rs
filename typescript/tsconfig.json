{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["dom", "es2020"],
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    }
}